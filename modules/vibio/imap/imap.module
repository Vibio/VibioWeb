<?php
define("IMAP_STATUS_PENDING", 1);
define("IMAP_STATUS_DELETED", 2);
define("IMAP_STATUS_SAVED", 3);

function imap_perm()
{
	return array(
		"imap admin",
		"imap user",
	);
}

function imap_menu()
{
	return array(
		"admin/settings/imap-image-fetch"	=> array(
			"title"				=> "IMAP Image Fetch",
			"page callback"		=> "drupal_get_form",
			"page arguments"	=> array("imap_admin"),
			"access arguments"	=> array("imap admin"),
			"file"				=> "imap.forms.inc",
			"type"				=> MENU_NORMAL_ITEM,
		),
		"imap/fetch"	=> array(
			"page callback"		=> "imap_fetch_images",
			"access callback"	=> "imap_access",
			"type"				=> MENU_CALLBACK,
		),
		"imap/ajax"		=> array(
			"page callback"		=> "imap_ajax_service",
			"access arguments"	=> array("imap user"),
			"file"				=> "imap.pages.inc",
			"type"				=> MENU_CALLBACK,
		),
	);
}

function imap_theme()
{
	return array(
		"imap_dashboard_notification"	=> array(
			"arguments"	=> array("imap_image" => array()),
			"template"	=> "templates/imap/dashboard-notification",
			"path"		=> drupal_get_path("theme", "vibio"),
		),
	);
}

function imap_forms($id, $args)
{
	module_load_include("inc", "imap", "imap.forms");
	
	if (strpos($id, "imap_delete_form_") !== false)
	{
		$forms[$id] = array(
			"callback"	=> "imap_delete_form",
		);
		
		return $forms;
	}
}

function imap_profile_ext_dashboard_notifications($uid)
{
	module_load_include("inc", "imap");
	
	$count = 0;
	$output = "";
	
	foreach (imap_user_pending_images($uid) as $image)
	{
		++$count;
		$output .= theme("imap_dashboard_notification", $image);
	}
	
	return array(
		"imap"	=> array(
			"count"		=> $count,
			"display"	=> $output,
		),
	);
}

function imap_preprocess_imap_dashboard_notification(&$vars)
{
	drupal_add_js("themes/vibio/js/imap.js");
	module_load_include("inc", "imap", "imap.forms");
	
	$image = $vars['imap_image'];
	$vars['image_delete_form'] = drupal_get_form("imap_delete_form_{$image->imap_id}", $image);
}

function imap_access()
{
	return true;
}

function imap_fetch_images()
{
	$start = microtime(true);
	module_load_include("inc", "imap");
	$count = imap_get_attachments();
	$time_taken = microtime(true) - $start;
	
	exit("Done. Took $time_taken seconds for $count images");
}
?>