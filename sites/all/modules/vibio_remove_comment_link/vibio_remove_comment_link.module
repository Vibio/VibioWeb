<?php
/**Remove the comment link from the product node page so we can print out
 * links for addthis.
 * 
 * @param <type> $links
 * @param <type> $node
 * @param <type> $comment 
 */
function vibio_remove_comment_link_link_alter(&$links, $node, $comment = NULL){
  if($node->type == 'product'){
    unset($links['comment_add']);  
  }
}
